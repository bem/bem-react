{
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "allowBranch": "master",
      "ignoreChanges": ["*.md", "**/test/**"],
      "message": "chore(release): publish"
    }
  },
  "independent": true,
  "conventionalCommits": true,
  "version": "independent",
  "exact": true,
  "npmClientArgs": ["--no-package-lock"]
}
