{
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "ignoreChanges": [
        "*.md",
        "**/test/**"
      ],
      "message": "chore(release): publish"
    }
  },
  "hoist": true,
  "version": "independent",
  "npmClient": "npm",
  "npmClientArgs": [
    "--no-package-lock"
  ]
}
