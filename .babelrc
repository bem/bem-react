{
  "presets": ["babel-preset-es2015-loose"],
  "plugins": [
    "transform-object-rest-spread",
    "transform-react-jsx"
  ],
  "env": {
    "client": {
      "plugins": [
        ["bem-import", {
          "levels": [
            "./tests/common.blocks",
            "./tests/desktop.blocks"
          ],
          "techs": ["js", "css"]
        }]
      ]
    },
    "server": {
      "plugins": [
        ["bem-import", {
          "levels": [
            "./tests/common.blocks",
            "./tests/desktop.blocks"
          ],
          "techs": ["js"]
        }]
      ]
    }
  }
}
