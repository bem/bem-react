{
  "name": "@bem-react/pack",
  "version": "3.0.0",
  "description": "A tool for building and prepare components for publishing",
  "homepage": "https://github.com/bem/bem-react/tree/master/packages/pack",
  "repository": "https://github.com/bem/bem-react",
  "keywords": [
    "bem",
    "build",
    "react"
  ],
  "bin": {
    "pack": "bin/pack"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin",
    "lib"
  ],
  "license": "MPL-2.0",
  "scripts": {
    "build": "tsc",
    "cleanup": "rm -rf lib",
    "dev": "tsc -w",
    "prepublishOnly": "npm run cleanup && npm run build",
    "test": "exit 0"
  },
  "dependencies": {
    "@oclif/core": "^1.21.0",
    "chalk": "4.1.0",
    "debug": "4.1.1",
    "fast-glob": "3.2.5",
    "fs-extra": "9.0.1",
    "log-update": "4.0.0",
    "tsc-alias": "1.8.6"
  },
  "devDependencies": {
    "@babel/cli": "7.14.8",
    "@babel/core": "7.15.0",
    "@types/debug": "4.1.5",
    "@types/fs-extra": "9.0.1",
    "postcss": "7.0.32",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  },
  "oclif": {
    "commands": "./lib/cli",
    "bin": "pack"
  }
}
