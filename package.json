{
  "name": "bem-react-core",
  "version": "1.0.0-rc.10",
  "description": "BEM React Core",
  "repository": {
    "url": "git://github.com/bem/bem-react-core.git",
    "type": "git"
  },
  "keywords": [
    "bem",
    "react",
    "preact",
    "core"
  ],
  "license": "MPL-2.0",
  "scripts": {
    "lint": "tsc -p . --noEmit && tslint -p . -t stylish",
    "test": "lerna run test",
    "transpile": "rollup -c config/rollup.config.$MODULE.js",
    "optimize": "uglifyjs packages/$MODULE/lib/index.all.js -c conditionals=false,sequences=false,loops=false,join_vars=false,collapse_vars=false --pure-funcs=Object.defineProperty -b width=120,quote_style=3 -o packages/$MODULE/lib/index.prod.js",
    "minify": "uglifyjs packages/$MODULE/lib/index.prod.js -c collapse_vars,evaluate,unsafe,loops=false,keep_fargs=false,pure_getters,unused,dead_code -m -o packages/$MODULE/lib/index.prod.min.js",
    "size": "node -e \"process.stdout.write('gzip size: ')\" && gzip-size --raw packages/$MODULE/lib/index.prod.min.js",
    "dist:react": "MODULE=react npm-run-all --silent transpile optimize minify size",
    "dist:preact": "MODULE=preact npm-run-all --silent transpile optimize minify size",
    "dist:core": "MODULE=core npm run transpile",
    "dist": "npm-run-all --silent dist:react",
    "prepush": "lerna run test",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "devDependencies": {
    "@commitlint/cli": "6.1.3",
    "@commitlint/config-conventional": "6.1.3",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-transform-object-assign": "6.22.0",
    "babel-preset-env": "^1.6.1",
    "gzip-size-cli": "2.1.0",
    "husky": "0.14.3",
    "lerna": "^2.5.1",
    "npm-run-all": "4.1.2",
    "react-test-renderer": "16.3.0",
    "rollup": "0.57.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "9.1.0",
    "rollup-plugin-node-resolve": "3.3.0",
    "rollup-plugin-replace": "2.0.0",
    "tslint": "5.9.1",
    "tslint-react": "3.5.1",
    "typescript": "2.8.1",
    "uglify-js": "3.3.18"
  }
}
